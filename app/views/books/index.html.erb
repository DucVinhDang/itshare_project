<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Category</th>
      <th>Year</th>
      <th>Star rating</th>
      <th>Download</th>
      <th>Description</th>
      <th>Image</th>
      <th>Pages</th>
      <th>Language</th>
      <th>File size</th>
      <th>File format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author_id %></td>
        <td><%= book.category_id %></td>
        <td><%= book.year %></td>
        <td><%= book.star_rating %></td>
        <td><%= book.download %></td>
        <td><%= book.description %></td>
        <td><%= book.image %></td>
        <td><%= book.pages %></td>
        <td><%= book.language %></td>
        <td><%= book.file_size %></td>
        <td><%= book.file_format %></td>
         <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

