<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <!-- <div class="field">
    <%= f.label :author_id %><br>
    <%= f.number_field :author_id %>
  </div> -->
  <!-- <div class="field">
    <%= f.label :category_id %><br>
    <%= f.number_field :category_id %>
  </div> -->

  <div class="form-group">
    <%= f.label :author %>
    <%= f.select :author_id, Author.all.collect { |x| [x.name, x.id] }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, Category.all.collect { |x| [x.name, x.id] }, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :star_rating %><br>
    <%= f.number_field :star_rating %>
  </div>
  <div class="field">
    <%= f.label :download %><br>
    <%= f.number_field :download %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :pages %><br>
    <%= f.number_field :pages %>
  </div>
  <div class="field">
    <%= f.label :language %><br>
    <%= f.text_field :language %>
  </div>
  <div class="field">
    <%= f.label :file_size %><br>
    <%= f.number_field :file_size %>
  </div>
  <div class="field">
    <%= f.label :file_format %><br>
    <%= f.text_field :file_format %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
